@model Zadanie
@{
    ViewData["Title"] = "AddTask";
}

<h1 class="display-4">Dodaj zadanie</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTask" method="post">
            <div class="form-group">
                <label asp-for="StartTime">Wybierz czas rozpoczęcia: </label>
                <input class="form-control" asp-for="StartTime" />
            </div>
            <div class="form-group">
                <label asp-for="EndTime">Wybierz czas zakończenia: </label>
                <input class="form-control" asp-for="EndTime" />
            </div>
            <div class="form-group">
                <label asp-for="Title">Tytuł zadania: </label>
                <input class="form-control" asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Opis zadania: </label>
                <input class="form-control" asp-for="Description" />
            </div>
            <button class="btn btn-primary" type="submit">Dodaj zadanie</button>
        </form>
    </div>
</div>
