@model Department
@{
    ViewData["Title"] = "Edycja działu firmy";
}

<h1>Edycja działu firmy</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDepartment">
            <input type="hidden" asp-for="DepartmentID" />
            <div class="form-group">
                <label asp-for="Name">Nazwa działu firmy: </label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Opis działu firmy: </label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit" action="EditTask">Aktualizuj dane działu</button>
            <a asp-action="Index">Powrót do listy zadań</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}