@model Department
@{
    ViewData["Title"] = "AddDepartment";
}

<h1>Dodaj nowy dział firmy</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDepartment">
            <div class="form-group">
                <label asp-for="Name">Nazwa nowego działu: </label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Opis działu: </label>
                <input class="form-control" asp-for="Description" />
            </div>
            
            <button class="btn btn-primary" type="submit">Dodaj dział</button>
        </form>
    </div>
</div>

